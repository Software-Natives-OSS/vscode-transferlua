{
	"name": "vscode-softwarenatives-transferlua",
	"displayName": "vscode-transferlua",
	"description": "Transfer Lua scripts to Indel targets",
	"version": "1.0.0",
	"publisher": "software-natives-zulliger",
	"repository": {
	  "type": "git",
	  "url": "git@github.com:Software-Natives-OSS/vscode-transferlua.git"
	},
	"engines": {
		"vscode": "^1.51.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:vscode-softwarenatives-transferlua.helloWorld"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "vscode-softwarenatives-transferlua.helloWorld",
				"title": "Transfer Lua"
			}
		],
		"configuration": {
			"title": "Transfer Lua",
			"properties": {
				"transferlua.indeltarget": {
					"type": "string",
					"default": "Net251",
					"description": "The name of the Indel target"
				},
				"transferlua.luastates": {
					"type": "array",
					"items": {
						"type": "object",
						"title": "Folder to Lua states assignments",
						"properties": {
							"path": {
								"type": "string",
								"description": "Path relative to the workspace root"
							},
							"state": {
								"type": "string",
								"description": "Lua state name"
							}
						}
					},
					"default": [],
					"description": "Setup Lua states for paths"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.51.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^12.11.7",
		"eslint": "^7.9.0",
		"@typescript-eslint/eslint-plugin": "^4.1.1",
		"@typescript-eslint/parser": "^4.1.1",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0"
	},
	"dependencies": {
		"@softwarenatives/transferlua": "^2.0.1"
	}
}
